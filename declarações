    <script>
        // Gerar a chuva de cora√ß√µes
        const heartRain = document.querySelector('.heart-rain');

        function generateHearts() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.textContent = '‚ù§Ô∏è'; // Cora√ß√£o

            // Posi√ß√£o aleat√≥ria
            const startPositionX = Math.random() * window.innerWidth;
            heart.style.left = `${startPositionX}px`;

            // Temporizador para adicionar cora√ß√µes continuamente
            heartRain.appendChild(heart);

            // Remover o cora√ß√£o ap√≥s a anima√ß√£o
            setTimeout(() => {
                heart.remove();
            }, 10000); // Remove o cora√ß√£o ap√≥s 10 segundos
        }

        // Gera cora√ß√µes a cada 500ms
        setInterval(generateHearts, 500);

        // Funcionalidade do menu pop-up
        const menuButton = document.querySelector('.menu-button');
        const menuPopup = document.querySelector('.menu-popup');
        const closeButton = document.querySelector('.close-btn');

        // Mostrar o menu pop-up
        menuButton.addEventListener('click', () => {
            menuPopup.style.display = 'flex';
        });

        // Fechar o menu pop-up
        closeButton.addEventListener('click', () => {
            menuPopup.style.display = 'none';
        });
    </script>
